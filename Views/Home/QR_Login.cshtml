@model TestProject.Models.QRCodeModel
@{
    ViewBag.Title = "QR_Login";
}

<h2>QR_Login</h2>


@using (Html.BeginForm("QR_Login", "Home" , FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.QRCodeImagePath, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4" style="margin-bottom :5px;">
                <img height="44" width="44" class="img-circle" id="previewImg" src="#" />
            </div>
            <div class="col-sm-offset-2 col-sm-10">
                @Html.EditorFor(model => model.QRCodeImagePath, new { htmlAttributes = new { @class = "form-control", id = "imgInput", @accept = "image/*", type = "file" } })
                @Html.ValidationMessageFor(model => model.QRCodeImagePath, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-12">
                <button type="submit" class="btn btn-info btn-icon btn-lg">
                    Submit
                    <i class="fa fa-save"></i>
                </button>
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Home", "Index")
</div>
